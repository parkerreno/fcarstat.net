<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <SignAssembly>False</SignAssembly>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>0.1.2-preview</Version>
    <Company>Parker Reno Ciambrone</Company>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://fcarstat.net</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <Authors>ParkerReno</Authors>
    <Product>Fcarstat.net</Product>
    <PackageId>Fcarstat.net</PackageId>
    <Description>A library for consuming the UDP "Data Out" from Forza Horizon 5. </Description>
    <RepositoryUrl>https://github.com/parkerreno/fcarstat.net</RepositoryUrl>
    <PackageTags>forza; forza horizon; forza horizon 5</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
  </ItemGroup>

</Project>
